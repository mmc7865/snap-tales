<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "suse";
    }
    html,
    body {
      width: 100%;
      height: 100%;
      background-color: #ecf0f3;
    }
    #main {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-color: #ecf0f3;
      padding: 20px 40px;
    }
    .container {
      width: 80%;
      padding-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .container .user{
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .container .buttons{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }
    .container a{
      padding: 10px 30px;
      background-color: #ecf0f3;
      font-size: 18px;
      font-weight: 500;
      border: none;
      border-radius: 10px;
      color: red;
      box-shadow: -3px -3px 7px #fff, 3px 3px 5px #ceced1;
      cursor: pointer;
    }
    .container a:active{
      box-shadow: inset 3px 3px 5px #ceced1, 3px 3px 7px #fff;

    }
    .container .explore{
      color: #04a304;
      padding: 10px 22px;
    }
    .container .userImage {
      width: 100px;
      height: 100px;
      box-shadow: -3px -3px 7px #fff, 3px 3px 5px #ceced1;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 15px;
    }
    .userDetails h3 {
      color: #00000090;
    }
    .cards {
      width: 80%;
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 20px;
    }
    .container img {
      width: 90%;
      height: 90%;
      border-radius: 10px;
      object-fit: cover;
      object-position: center;
    }
    .card,
    .upload {
      width: 270px;
      height: 380px;
      display: flex;
      flex-direction: column;
      gap: 10px;
      padding: 10px;
      background-color: #ecf0f3;
      border-radius: 20px;
      box-shadow: -3px -3px 7px #fff, 3px 3px 5px #ceced1;
    }
    .cards .upload{
      box-shadow: inset 3px 3px 5px #ceced1, 3px 3px 7px #fff;

    }
    .card .profile {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
    }
    .profile i {
      font-size: 20px;
      font-weight: 900;
    }
    .card .imageName {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .card .imageName span {
      font-weight: 600;
    }
    .card .media {
      width: 100%;
      height: 80%;
      border-radius: 5px;
      box-shadow: inset 3px 3px 5px #ceced1, 3px 3px 7px #fff;
      overflow: hidden;
    }
    .media img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .imageName img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }
    .actions {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 0 5px;
      font-size: 20px;
      cursor: pointer;
    }
    .actions .heart {
      color: red;
    }
    .caption {
      padding-left: 10px;
    }
    .upload {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      font-size: 50px;
      cursor: pointer;
    }
    a {
      text-decoration: none;
      color: #00000090;
    }
    @media  (max-width: 660px){ 
      #main{
        padding: 0px;
        padding-top: 20px;
      }
      .container{
        align-items: flex-start;
      }
      .container .user{
        flex-direction: column;
        align-items: start;
      }
      .container a{
        padding: 10px 24px;
      }
      .container .explore{
        padding: 10px 15px;
      }
      .userDetails h3{
        display: none;
      }
      .upload , .card{
        width: 290px;
      }
      
    }
  </style>
  <body>
    <div id="main">
      <div class="container">
       <div class="user">
        <div class="userImage">
          <img src="<%= user.imageURL%>" alt="" />
        </div>
        <div class="userDetails">
          <h2><%= user.username%></h2>
          <h3><%= user.email%></h3>
        </div>
       </div>
        <div class="buttons">
          <a href="/users/logOut">Log Out <i class="ri-logout-box-r-line"></i></a>
          <a class="explore" href="/users/exploreFeed">Explore Feed </a>
        </div>
      </div>
      <div class="cards">
        <% posts.map((post, idx)=>{ %>
        <div class="card">
          <div class="profile">
            <div class="imageName">
              <img src="<%= post.author.imageURL%>" alt="" />
              <span><%= post.author.username%></span>
            </div>
            <i class="ri-more-fill"></i>
          </div>
          <div class="media">
            <img src="<%= post.media%>" alt="" />
          </div>
          <div class="actions">
            <div class="likeShare">
              <i class="heart ri-heart-fill"></i>
              <i class="comment ri-chat-1-line"></i>
              <i class="share ri-send-plane-line"></i>
            </div>
            <div class="bookmark">
              <i class="ri-bookmark-line"></i>
            </div>
          </div>
          <div class="caption">
            <p><%= post.caption%></p>
          </div>
        </div>
        <% }) %>
        <div class="upload">
          <a href="/users/createPost"><i class="ri-add-line"></i></a>
        </div>
      </div>
    </div>
  </body>
</html>
